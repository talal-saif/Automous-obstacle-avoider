<?xml version="1.0" ?>
<sdf version="1.6">
  <model name="avoider_robot">
    <pose>0 0 0.05 0 0 0</pose>
    <link name="base">
      <inertial><mass>1.0</mass></inertial>
      <collision name="col"><geometry><box><size>0.2 0.15 0.05</size></box></geometry></collision>
      <visual name="vis"><geometry><box><size>0.2 0.15 0.05</size></box></geometry></visual>
    </link>

    <joint name="left_wheel_joint" type="revolute">
      <parent>base</parent><child>left_wheel</child>
      <axis><xyz>0 1 0</xyz></axis>
    </joint>
    <link name="left_wheel">
      <collision name="col"><geometry><cylinder><radius>0.03</radius><length>0.02</length></cylinder></geometry></collision>
      <visual name="vis"><geometry><cylinder><radius>0.03</radius><length>0.02</length></cylinder></geometry></visual>
      <pose>-0.05 0.09 0.03 0 0 0</pose>
    </link>

    <joint name="right_wheel_joint" type="revolute">
      <parent>base</parent><child>right_wheel</child>
      <axis><xyz>0 1 0</xyz></axis>
    </joint>
    <link name="right_wheel">
      <collision name="col"><geometry><cylinder><radius>0.03</radius><length>0.02</length></cylinder></geometry></collision>
      <visual name="vis"><geometry><cylinder><radius>0.03</radius><length>0.02</length></cylinder></geometry></visual>
      <pose>0.05 0.09 0.03 0 0 0</pose>
    </link>

    <link name="sensor_link">
      <pose>0.1 0 0.06 0 0 0</pose>
      <sensor name="front_ray" type="ray">
        <update_rate>15</update_rate>
        <ray>
          <scan><horizontal><samples>21</samples><resolution>1</resolution><min_angle>-0.35</min_angle><max_angle>0.35</max_angle></horizontal></scan>
          <range><min>0.02</min><max>2.5</max><resolution>0.01</resolution></range>
        </ray>
        <always_on>true</always_on>
        <visualize>true</visualize>
        <pose>0 0 0 0 0 0</pose>
        <plugin name="avoider_plugin" filename="libavoider_plugin.so">
          <left_joint>left_wheel_joint</left_joint>
          <right_joint>right_wheel_joint</right_joint>
          <safe_distance>0.25</safe_distance>
          <turn_time_ms>350</turn_time_ms>
          <speed>2.0</speed>
        </plugin>
      </sensor>
    </link>
  </model>
</sdf>
